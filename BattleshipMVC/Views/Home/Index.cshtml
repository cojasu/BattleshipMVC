@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Battleship MVC</title>
    <meta name="viewport" content="width=device-width, intial-scale=1, minimum-scale=1" />
    <meta name="description" content="Battleship in MVC.NET" />
    <meta name="keywords" content="Battleship, MVC, ASP.NET, UASIS, University of Akron" />
    <meta name="author" content="Cory Sutyak" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css" />
</head>
<body>
    <!-- NAVIGATION -->
    <nav class="navbar navbar-default navbar-fixed top topnav" role="navigation">
        <div class="container topnav">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand topnav" href="#">BattleshipMVC</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#play">Play</a>
                    </li>
                    <li>
                        <a href="#about">About</a>
                    </li>
                    <li>
                        <a href="#contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <a name="play"></a>
    <div class="container">
        @Html.Partial("Battleship")
    </div>
    <br />
    <a name="about"></a>
    <div class="container">
        <article class="quote">
            <img src="../Images/me.jpg" title="Cory Sutyak" />
            <p>
                Yo!  I'm Cory.  I designed this site to accomplish a few things. 
            </p>
            <ul>
                <li>First, I needed to create something for <a href="http://www.uakron.edu/gradsch/uasis/">UASIS</a>.
                </li>
                <li>Second, I wanted to brush up on my .NET MVC skills.
                </li>
                <li>Third, I wanted to challenge myself by making a game of Battleship for the web fit with a mobile-first approach.</li>
                <li>Fourth, I thought it would be cool.</li>
            </ul>
        </article>
    </div>
    <br />
    <a name="contact"></a>
    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2>Contact Me!</h2>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline banner-social-buttons">
                        <li>
                            <a href="https://www.coryjs.com" class="btn btn-default btn-lg"><i class="fa fa-home"></i><span class="network-name">Website</span></a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/cory.sutyak" class="btn btn-default btn-lg"><i class="fa fa-facebook"></i><span class="network-name">Facebook</span></a>
                        </li>
                        <li>
                            <a href="https://www.github.com/cojasu" class="btn btn-default btn-lg"><i class="fa fa-github"></i><span class="network-name">GitHub</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</body>
</html>
