@model BattleshipMVC.Models.Battleship

@{
    var game = Session["gameSession"] as BattleshipMVC.Models.Battleship;
    
}
<div class="row">
    <div class="col-lg-8">

        @{
            for (int i = 0; i < 10; i++){
                <p>
                @for(int j = 0; j < 10; j++){
                 @game.playerUpBoard[i,j].ToString() 
                } 
                     </p>
            }
        }
        @using (Html.BeginForm("Target", "Home", FormMethod.Post, new { id = "gameForm" }))
        { 
            
            <h2>Make your moves here.</h2>
            <table>
                @for (int i = 0; i < 10; i++)
                {
                    <tr>
                       @for (int j = 0; j < 10; j++)
                       {
                           if (game.playerUpBoard[i, j] == 0)
                           {
                                <td><button name="target" type="submit" class="blue" id="button" value="@(i.ToString() + " " + j.ToString())" /></td>
                           }
                           if (game.playerUpBoard[i, j] == 1)
                           {
                                <td><button name="target" type="submit" class="red" disabled id="clickedButton" value="@(i.ToString() + " " + j.ToString())" /></td>
                           }
                       }
                    </tr>
                }
            </table>
        }
        </div>
    <div class="col-lg-2">
        <p>List of ships you've sunk</p>
        <ul>
        @for (int i = 0; i < 5; i++)
        {
            <li>
                Test Ship: @i
            </li>
        }
            </ul>
    </div>
   <div class="col-lg-8">
        @using (Html.BeginForm())
        { 
            <h2>Your status:</h2>
            <table>
                @for (int i = 1; i < 11; i++)
                {
                    <tr>
                       @for (int j = 1; j < 11; j++)
                       {
                            <td><button type="submit" name="button" value="@i @j" disabled="disabled"/></td>
                       }
                    </tr>
                }
            </table>
        }
        </div>
    <div class="col-lg-2">
        <p>List of your sunk ships:</p>
        <ul>
        @for (int i = 0; i < 5; i++)
        {
            <li>
                Test Ship: @i
            </li>
        }
            </ul>
    </div>
</div>